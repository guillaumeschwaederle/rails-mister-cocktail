<div class='container'>
  <div class='row'>
    <h2> Nom du cocktail : <%= @cocktail.name %></h2>
    <p> Pour ce cocktail il vous faudra : </p>
      <% @cocktail.doses.each do |dose| %>
      <p><%= dose.description %></p>
      <P><%= dose.ingredient.name %></P>
       <%= link_to "Supprimer la dose", dose_path(dose),
       method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-primary"%>
      <% end %>
  </div>
  <div class='action'>
  <%= link_to "Retour Ã  la liste des cocktails", cocktails_path, class:"btn btn-primary"%>
  <%= link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail), class:"btn btn-primary"%>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </div>
</div>
